<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Adds a Blocking SkyMind Connection comp to Dementia and Alzheimers -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/HediffDef[defName = "Dementia" or defName = "Alzheimers"]/modExtensions</xpath>
        <match Class="PatchOperationAdd">
            <xpath>Defs/HediffDef[defName = "Dementia" or defName = "Alzheimers"]/modExtensions</xpath>
            <value>
                <li Class="ATReforged.ATR_SkyMindHediffExtension">
                    <blocksConnection>true</blocksConnection>
                </li>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/HediffDef[defName = "Dementia" or defName = "Alzheimers"]</xpath>
            <value>
                <modExtensions>
                    <li Class="ATReforged.ATR_SkyMindHediffExtension">
                        <blocksConnection>true</blocksConnection>
                    </li>
                </modExtensions>
            </value>
        </nomatch>
	</Operation>

</Patch>